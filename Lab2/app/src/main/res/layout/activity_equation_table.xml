<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EquationActivity" android:orientation="vertical">
    <TableRow android:layout_width="match_parent">
        <EditText
                android:hint="@string/equation_pattern"
                android:labelFor="@id/equationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/equation_pattern"
                android:ems="10"
                android:layout_margin="3dp"
                android:id="@+id/equationEditText"/>
    </TableRow>
    <TableRow>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:id="@+id/ansLabel"/>
    </TableRow>
        <TableRow>
            <Button
                    android:onClick="solve"
                    android:text="@string/action"
                    android:layout_width="match_parent"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content" android:id="@+id/solveButton"/>
        </TableRow>
</TableLayout>