<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EquationActivity" android:orientation="vertical">

    <EditText
            android:hint="@string/equation_pattern"
            android:labelFor="@id/equationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/equation_pattern"
            android:ems="10"
            android:id="@+id/equationEditText" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_margin="3dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ansLabel"
            android:layout_below="@+id/equationEditText" android:layout_centerHorizontal="true"
            android:layout_margin="3dp"/>
    <Button
            android:onClick="solve"
            android:text="@string/action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/solveButton" android:layout_alignParentStart="true"
            android:layout_below="@+id/ansLabel" android:layout_margin="3dp"/>

</RelativeLayout>