<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.albarn.adapter.AdapterActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numberEditText" android:hint="number to add"/>
    <Button
            android:text="add number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/addButton"/>

    <com.albarn.adapter.AdapterActivity.RemovableListView
            android:layout_width="match_parent" android:layout_height="match_parent"
              android:id="@+id/numbersListView"/>
</LinearLayout>
