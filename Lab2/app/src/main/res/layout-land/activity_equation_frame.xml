<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EquationActivity" android:orientation="vertical">

    <EditText
            android:hint="@string/equation_pattern"
            android:labelFor="@id/equationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/equation_pattern"
            android:ems="10"
            android:layout_margin="20dp"
            android:id="@+id/equationEditText"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ansLabel" android:layout_marginTop="90dp" android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
    <Button
            android:onClick="solve"
            android:text="@string/action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/solveButton"
            android:layout_marginTop="160dp" android:layout_marginBottom="80dp"
            android:layout_marginLeft="80dp" android:layout_marginRight="80dp"/>

</FrameLayout>